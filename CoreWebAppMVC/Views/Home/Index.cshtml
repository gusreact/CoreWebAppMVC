@model List<Friend>
@{
    ViewData["Title"] = "Amigos indice";
}

<div class="card-deck row">
    @foreach (var friend in Model)
    {
        var filePath = "~/images/" + (friend.ImagePath ?? "nezukoBaby.jpeg");
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@friend.Name</h3>
            </div>
            <img class="card-img-top imageStyle" src="@filePath" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@friend.Id" class="btn btn-primary">View Details</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
</div>
